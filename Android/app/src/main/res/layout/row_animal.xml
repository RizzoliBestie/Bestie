<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Volpe"
        android:textColor="@color/settore_wild_testo_principale"
        android:textSize="60px" />

    <TextView
        android:id="@+id/raceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10px"
        android:layout_marginRight="20dp"
        android:text="Fennec"
        android:textColor="@color/settore_wild_testo_secondario"
        android:textSize="45px" />

    <TextView
        android:id="@+id/speciesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/raceTextView"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10px"
        android:layout_marginRight="20dp"
        android:text="Mammifero"
        android:textColor="@color/settore_wild_jolly"
        android:textSize="45px" />

    <!-- Imageview Originale:-->
<!--
    <ImageView
        android:id="@+id/animalImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="0dp"
        android:shape="ring"
        app:srcCompat="@android:drawable/ic_menu_help"
        tools:ignore="ImageContrastCheck" />
-->
    <com.mikhaellopez.circularimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/animalImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@android:drawable/ic_menu_help"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/grey_smoke"
        android:scaleType="centerCrop"/>
    <!-- Il colore deve essere jolly tipo "@color/settore_wild_jolly",
    temporaneamente rimpiazzato con grey-->

</RelativeLayout>